from gtts import gTTS
import IPython.display as ipd  
from googletrans import Translator

your_text = input('Give me a text to translate ')
your_lang = input('Give me the 2-letter language code you want to translate into ')

translator = Translator()
your_text_transl = translator.translate(your_text, dest= your_lang)
#print(your_text_transl)
your_text_tospeech = your_text_transl.text

tts1=gTTS(text = your_text_tospeech, lang = your_lang)
tts1.save('your_file.mp3')
ipd.display(ipd.Audio('your_file.mp3'))
